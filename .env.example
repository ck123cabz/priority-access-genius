# =============================================================================
# ENVIRONMENT VARIABLES CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit actual secrets to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard: https://app.supabase.com/project/[project-id]/settings/api

# Supabase Project URL (public)
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"

# Supabase Anonymous Public Key (public - safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# Supabase Service Role Key (PRIVATE - server-side only, has admin access)
# WARNING: This key has full access to your database. Keep it secret!
SUPABASE_SERVICE_ROLE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection string for Prisma
# Production: Use Supabase connection pooler for better performance
DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# Direct database connection (for migrations only)
DIRECT_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
# Application environment (development, staging, production)
NODE_ENV="development"

# Node.js version for consistent runtime
NODE_VERSION="20"

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel deployment settings
NEXT_TELEMETRY_DISABLED="1"
VERCEL_ENV="development"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# NextAuth secret for session encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# NextAuth URL (deployment URL)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features in different environments
ENABLE_ANALYTICS="false"
ENABLE_DEBUG_LOGGING="false"

# =============================================================================
# DEVELOPMENT-ONLY SETTINGS
# =============================================================================
# These should only be used in development environment
DEBUG="true"
LOG_LEVEL="debug"

